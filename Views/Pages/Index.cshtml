@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    List<string> users = ViewData["Users"] as List<string>;
}
<style>
    body{
        background-color: black;
        color: white;
    }

    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .text{
        color: white;
    }
</style>

<body>
    <div>
        <h1>Welcome to the Online Building Game!</h1>
    </div>
    <div class="flex-container">
        <div>
            <h2 id="toggleLogin">Log in:</h2>
            <div id="loginPanel">
                <form asp-controller="Pages" asp-action="Login" method="post">
                    <input name="Name" class="form-control" value="Tim" />
                    <input name="Password" class="form-control" value="a12"/>
                    <button id="loginButton" type="submit">Submit</button>
                </form>
            </div>
        </div>

        <div>
            <h2 id="toggleRegister">Register:</h2>
            <div id="registerPanel">
                <form asp-controller="Pages" asp-action="Register" method="post">
                    <input name="Name" class="form-control" />
                    <input name="Password" class="form-control" />
                    <button id="registerButton" type="submit">Submit</button>
                </form>
            </div>
        </div>

        <div>
            @foreach(string u in users)
            {
                <h2>@u : a12</h2>
            }
        </div>
    </div>

</body>
